{
  "manifest_version": 2,
  "name": "FxPlus+ for Firefox",
  "short_name": "FxPlus+",
  "author": "SilverTuxedo",
  "description": "מעולם לא היה קל יותר לגלוש ב-FxP.",
  "version": "1.0.0",

  "browser": "firefox",

  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },

  "browser_action": {
    "default_icon": "images/icon.png",
    "default_title": "פתח התראות - FxPlus+",
    "default_popup": "html/popup.html"
  },

  "options_page": "html/settings.html",

  "background": {
    "page": "html/background.html"
  },

  "permissions": [
    "https://www.fxp.co.il/*",
    "tabs",
    "storage",
    "notifications",
    "cookies",
    "background"
  ],

  "content_scripts": [
    {
      "matches": [ "https://www.fxp.co.il/*" ],
      "js": [ "js/jquery.min.js", "js/main_fxp.js" ],
      "css": [ "css/main_fxp.css", "css/balloon.css" ],
      "run_at": "document_start"
    }
  ],

  "content_security_policy": "script-src 'self' https://syndication.twitter.com/; object-src 'self'",

  "web_accessible_resources": [ "html/settings.html", "css/nightmode.css", "images/*" ],

  "applications": {
    "gecko": {
      "id": "tuxedosilver@gmail.com"
    }
  }
}
